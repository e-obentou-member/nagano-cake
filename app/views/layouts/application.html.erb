<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Disabled</a>
      </li>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
    <header>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>
        <!--会員がログインしている場合-->
         <li>
           <%= link_to customer_path(current_customer), class: 'nav-link text-light' do %>
             <i class="fas fa-user"></i> マイページ
           <% end %>
         </li>
         <li>
           <%= link_to menus_path, class: 'nav-link text-light' do %>
             <i class="fas fa-link"></i> 商品一覧
           <% end %>
         </li>
         <li>
           <%= link_to cart_items_path, class: 'nav-link text-light' do %>
             <i class="fas fa-shopping-cart"></i> カート
           <% end %>
         </li>
         <li>
          <%= link_to destroy_customer_session_path, class: 'nav-link text-light' do %>
            <i class="fas fa-sign-out-alt"></i> Log out
          <% end %>
         </li>
        <% elsif  admin_signed_in? %>
        <!--管理者がログインしている場合-->
         <li>
           <%= link_to admin_menues_path, class: 'nav-link text-light' do %>
           <i class="fas fa-link"></i> 商品一覧
         <% end %>
         </li>
        <li>
          <%= link_to admin_customers_path, class: 'nav-link text-light' do %>
            <i class="fas fa-user-circle"></i> 会員一覧
          <% end %>
        </li>
        <li>
          <%= link_to root_path, class: 'nav-link text-light' do %>
            <i class="fas fa-link"></i> 注文履歴一覧
          <% end %>
        </li>
        <li>
          <%= link_to genres_path, class: 'nav-link text-light' do %>
            <i class="fas fa-link"></i> ジャンル一覧
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, class: 'nav-link text-light' do %>
            <i class="fas fa-sign-out-alt"></i> Log out
          <% end %>
        </li>
        <% else %>
        <!--ログインしていない状態-->
          <li>
            <%= link_to homes_about_path,class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i> About
            <% end %>
          </li>
          <li>
            <%= link_to menus_path,class: 'nav-link text-light' do %>
              <i class="fas fa-link"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path,  class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> Log in
            <% end %>
          </li>
        <% end %>
      </ul>
      </div>
    </header>

    <main>
    <%= yield %>
    </main>

    <footer>
      <div class='container mt-5'>
        <div class='row'>
          <div class='mx-auto'>
            <p>CopyRight Teamおべんとう.inc</p>
          </div>
        </div>
      </div>
    </footer>


  </body>
</html>
