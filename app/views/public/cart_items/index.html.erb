<h1>Public::CartItems#index</h1>

<div class="container">
  <div class="row">
    <p>ショッピングカート</p>
    <div class="col-md-4 offset-md-9 mb-4">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger btn-sm" %>
    </div>
  </div>

  <div class="row">
    <table class="table col-md-12 justify-content-center">
      <thead>
        <tr>
          <th>商品名</th>
          <th></th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan=""></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item|  %>
          <tr>
            <td><%= image_tag cart_item.menu.get_image(300, 200) %></td>
            <td><%= cart_item.menu.name %></td>
            <td><%= cart_item.menu.tax_in_price %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), class: "form-inline" do |f| %>
                <%= f.select :count, *[1..10], class: "form-control" %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>

            <td><%= cart_item.subtotal_price %></td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="col-md-6">
      <%= link_to "買い物を続ける", menus_path, class:"btn btn-primary" %>
    </div>
    <table class="table table-bordered col-md-4">
      <tr>
        <!--引数の:の前に&をつけるとメソッドの呼出ができる(a)-->
        <td>合計金額</td><td><%= @cart_items.sum(&:subtotal_price) %></td>
      </tr>
    </table>



  </div>

  <div class="d-flex justify-content-center">
    <div class="row">
      <%= link_to "情報入力に進む", orders_done_path, class:"btn btn-success" %>
    </div>
  </div>
</div