<h1>Public::CartItems#index</h1>

<div class="container">
  <div class="row">
    <p>ショッピングカート</p>
    <div class="col-md-4 offset-md-9 mb-4">
      <%#= link_to "カートを空にする", cart_items_destroy_all_path, class:"btn btn-danger btn-sm" %>
    </div>
  </div>

  <div class="row">
    <table class="table col-md-12 justify-content-center">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan=""></th>
        </tr>
      </thead>
      <tbody>
        <%# @cart_items.each do |cart_item|  %>
        <tr>
          <td><%= image_tag get_image(30, 20) %></td>
          <td><%= cart_items.name  %></td>
          <td><%= cart_items.@tax_in_price %></td>

          <td>
            <%= form_tag cart_items_path, class: "form-inline" do %>
              <%= select_tag :quantity, options_for_select(["個数選択", 1, 2, 3, 4, 5]), class: "form-control" %>
            <% end %>
          </td>

          <td>小計</td>
          <td>
            <%#= link_to "削除する", cart_item_path, method: :delete, class: "btn btn-danger" %>
          </td>
          <%# end %>
        </tr>
      </tbody>
    </table>

    <div class="col-md-6">
      <%= link_to "買い物を続ける", menus_path, class:"btn btn-primary" %>
    </div>
    <table class="table table-bordered col-md-4">
      <tr>
        <td>合計金額</td><td><%#= @total_price %></td>
      </tr>
    </table>



  </div>

  <div class="d-flex justify-content-center">
    <div class="row">
      <%= link_to "情報入力に進む", orders_done_path, class:"btn btn-success" %>
    </div>
  </div>
</div