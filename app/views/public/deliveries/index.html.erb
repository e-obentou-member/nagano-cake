<div class='container px-5 px-0'>


<h2 class="pt-3 pb-3">配送先登録/一覧</h2>
<%= render 'layouts/errors', obj: @delivery_new %>

<%= form_with model: @delivery_new do |f| %>

<table class="table">
  <tbody>
     <tr>
   <div class="field">
       <th><%= f.label :郵便番号（ハイフンなし） %></th>
       <th><%=  f.text_field :postcode, class: "form-control", autofocus: true %></th>
        </div>
     </tr>

       <tr>
    <div class="field">
       <th><%= f.label :住所 %></th>
       <th><%=  f.text_field :address, class: "form-control" %></th>
    </div>
     </tr>


    <tr>
    <div class="field">
       <th><%= f.label :宛名 %></th>
       <th><%= f.text_field :name, class: "form-control" %></th>
      <th><%= f.submit "新規登録", class: "btn btn-success" %></th>
    </div>
      </tr>
  </tbody>
  <% end %>
</div>

<table class="table table-bordered">
  <thead>

   <tr>
         <th>郵便番号</th>
         <th>住所</th>
         <th>宛名</th>
         <th>　</th>

   </tr>
  </thead>
  <% @deliveries.each do |delivery| %>
  <tbody>

        <tr>
               <td><%= delivery.postcode %></td>
               <td><%= delivery.address %></td>
               <td><%= delivery.name %></td>
               <td>
                      <%= link_to "編集", edit_delivery_path(delivery.id), class: "btn btn-success" %>
                      <%= link_to "削除", delivery_path(delivery.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>

               </td>
  <% end %>
        </tr>

 </tbody>


</table>
</div>