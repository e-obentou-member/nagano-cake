<div class='container px-5 px-0'>

</br>
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


<table class="table">

 <tboody>

    <tr>
    <div class="field">
       <th><%= f.label :名前 %></th>
       <th>（姓）<%= f.text_field :first_name, class: "form-control", autofocus: true %></th>
      <th>（名）<%= f.text_field :last_name, class: "form-control" %></th>
    </div>
      </tr>

   <tr>
   <div class="field">
       <th><%= f.label :フリガナ %></th>
       <th>（セイ）<%=  f.text_field :first_name_kana, class: "form-control" %></th>
      <th>（メイ）<%= f.text_field :last_name_kana, class: "form-control" %></th>
       </div>
     </tr>

   <tr>
   <div class="field">
       <th><%= f.label :郵便番号（ハイフンなし） %></th>
       <th><%=  f.text_field :postcode, class: "form-control", autocomplete: "postcode", id: "customer_postcode" %></th>
        </div>
     </tr>
 <!--入るとエラーJpPrefecture::Prefecture.all, :code, :name, -->
   <tr>
    <div class="field">
       <th><%= f.label :住所 %></th>
       <th><%=  f.text_area :address, class: "form-control",autocomplete: "address", id: "customer_address" %></th>
    </div>
     </tr>

   <tr>
    <div class="field">
       <th><%= f.label :電話番号（ハイフンなし） %></th>
       <th><%=  f.text_field :telephone_number, class: "form-control" %></th>
     </div>
     </tr>


     <tr>
    <div class="field">
    <th><%= f.label :メールアドレス %></th>
    <th><%= f.email_field :email, autocomplete: "email", class: "form-control" %>
   </th>
    </div>
    </tr>

     <tr>
    <div class="field">
    <th><%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %></th>
    <th><%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </th>
    </div>
    </tr>

     <tr>
     <div class="field">
    <th><%= f.label :パスワード（確認用） %></th>
    <th><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
     </th>
     </div>
     </tr>
     <tr>
       <th>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </th>
     </tr>
</table>

<% end %>
<h5>既に登録お済の方</h5>

<%= render "public/shared/links" %>
</div>