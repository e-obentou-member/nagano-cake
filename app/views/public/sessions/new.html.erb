<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<p>会員の方はこちらからログイン</p>

<tr>
  <div class="field">
    <th><%= f.label :メールアドレス %></th>
    <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
  </div>
  </tr>

<tr></tr>
  <div class="field">
    <th><%= f.label :パスワード %></th>
    <th><%= f.password_field :password, autocomplete: "current-password" %>
  </th>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
