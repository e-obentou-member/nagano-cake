<p>注文情報入力</p>

<!--orders_check_path→orders_pathに変更(a)-->
<%= form_with model: @order, url: orders_path, local: true do |f| %>

  <p>支払方法</p>
  <div class="form-group">
    <!--enum記述、後ほど見直し(a)-->
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit] %>
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:bank_transfer]%>
  </div>

  <h3>お届け先</h3>
  <div class="form-group">
    <%= f.label :address %>

    <div class="form-check">
      <%= f.radio_button :address_number, 1 %>
      <%= f.label :address_number_1, "ご自身の住所"%>
      <%= @customer.postcode %>
      <%= @customer.address %>
      <%= @customer.first_name %>
      <%= @customer.last_name %>
    </div>
    <div class="form-check">
      <%= f.radio_button :address_number, 2 %>
      <%= f.label :address_number_2, "登録済み住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(Delivery.all, :id, :address_display) %>
      <%#= f.collection_select :registered, @customer.deliveries, :id, :address %>
    </div>

    <div class="form-check">
      <%= f.radio_button :address_number, 3 %>
      <%= f.label :address_number_3,"新しいお届け先" %>
      <table>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="mx-auto">
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
  </div>

<% end %>
