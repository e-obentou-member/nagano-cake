＃form_withはデフォルトがpostメソッド(a)

<%= form_with @order, url: orders_check_path, local: true do |f| %>

<p>支払方法</p>
  <div class="form-group">
    <%= f.label :payment_way %>
    <div class="form-check">
      <%= f.radio_button :payment_way, "credit" %>
      <%= f.label :payment_way, "クレジットカード", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= f.radio_button :payment_way, "bank_transfer" %>
      <%= f.label :payment_way, "銀行振込", class: "form-check-label" %>
    </div>
  </div>
  
  
  
<h3>お届け先</h3>
  <div class="form-group">
    <%= f.label :address %>
    
    <div class="form-check">
      <%= f.radio_button :address_number, 1 %>
      <%= f.label :address_number_1, "ご自身の住所"%>
      <%= current_customer.customer_address, class: "form-check-label" %>
    </div>
    
    <div class="form-check">
      <%= f.radio_button :address_number, 2 %>
      <%= f.label :address_number_2, "登録済み住所から選択" %>
      <%= f.collection_select(:address_id, current_customer.addresses.all, :id, :address, class: "form-check-label" %>
    </div>
    
    <div class="form-check">
      <%= f.radio_button :address_number, 3 %>
      <%= f.label :address_number_3,"新しいお届け先" %>
      <table>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name %></td>
        </tr>
      </table>
    </div>

  </div>
<%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
<% end %>
