<div class="mt-5 ml-5">
  <h3>注文履歴一覧</h3>
</div>

<table class="table table-bordered col-md-10 offset-md-1">
  <thead>
   <tr>
     <td>注文日</td>
     <td>配送先</td>
     <td>注文商品</td>
     <td>支払金額</td>
     <td>注文詳細</td>
   </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          〒<%= order.postcode %><br>
          <%= order.address %><br>
          <%= order.name %><br>
        </td>
        <td>
          <% order.order_details.each do |order_detail| %>
            <%= order_detail.menu.name %><br>
          <% end %>
        </td>
        <td><%= order.amount %>円</td>
        <td><%= link_to '表示する', order_path(order.id), class: "btn btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>





</table>
