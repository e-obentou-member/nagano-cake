<div class="container mt-5">
  <h5>注文履歴詳細</h5>

<div class="mb-3">
  <td>注文情報</td><td>　　　　　　　　　　　　　　　　　　　　　　　　　　　　　請求情報</td>
  <!--代替案求む(a)-->
</div>
  <div class="row">
    <table class="table table-bordered col-md-5 mr-5 ml-3">
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          <%= @order.postcode %>
          <%= @order.address %>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_way_i18n %></td>
      </tr>
    </table>

    <table class="table table-bordered col-md-3">
      <thead>
      <tr>
        <td>商品合計</td>
        <td><%= @order.amount %></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= @postage %></td>
      </tr>
      <tr>
        <td>ご請求額</td>
        <td><%= @order.amount + @postage %></td>
      </tr>
      </thead>
    </table>
  </div>

    <table class="table table-bordered col-md-7">
      <p>注文内容</p>
      <thead>
        <tr>
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
      </thead>

      <tbody>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.menu.name %></td>
            <td><%= order_detail.menu.tax_in_price %></td>
            <td><%= order_detail.count %></td>
            <td><%= order_detail.menu.tax_in_price * order_detail.count %></td>
          </tr>
        <% end %>
      </tbody>

    </table>

  </div>
</div>
