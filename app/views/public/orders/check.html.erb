
<!--containerと注文情報確認テーブルはpublic/cart_itemsブランチで記述-->
<div class="container mt-5">
  <div class="row">
    <p>注文情報確認画面</p>
  </div>

  <div class="row">
    <table class="table table-bordered col-md-8">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart| %>
        <tr>
          <td><%= cart.menu.name %></td>
          <td><%= cart.menu.tax_in_price %></td>
          <td><%= cart.count %></td> <!-- 個数 -->
          <td><%= cart.subtotal_price %></td> <!-- 小計 -->
        </tr>
        <% end %>

    </table>

    <table class="table table-bordered col-md-3 ml-5">
      <tr>
        <td scope="row">送料</td>
        <td><%= @postage %></td>
      </tr>
      <tr>
        <td scope="row">商品合計</td>
        <td><%= @total_price.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td scope="row">請求金額</td>
        <td><%= @total_price + @postage %></td>
      </tr>
    </table>
  </div>


    <!--支払方法とお届け先、[注文を確定する]ボタンはpublic/oedersブランチで記述-->




  <p>支払方法  <%= @order.payment_method_i18n %></p>


  <p>お届け先</p>
  <%= @order.postcode %> <%= @order.address %>
  <%= @order.name %>

  <div class="d-flex justify-content-center">
    <div class="row">
      <%= link_to "注文を確定する", orders_done_path, class:"btn btn-success" %>
    </div>
  </div>



  </div>
</div>