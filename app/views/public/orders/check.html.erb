<h1>Public::Orders#check</h1>
<!--containerと注文情報確認テーブルはpublic/cart_itemsブランチで記述-->
<div class="container">
  <div class="row">
    <p>注文情報確認画面</p>
  </div>

  <div class="row">
    <table class="table col-md-6">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <!--下記でレコード表示-->

    </table>
    <table class="table col-md-6">
      <td>送料</td><td></td>
      <td>商品合計</td><td></td>
      <td>請求金額</td><td></td>
    </table>
  </div>


    <!--支払方法とお届け先、[注文を確定する]ボタンはpublic/oedersブランチで記述-->


    <% @cart_items.each do |cart| %>
      <%= cart.menu.name %> <!-- 商品名 -->
      <%= (cart.menu.tax_in_price).to_s(:delimited) %>　<!-- 金額 -->
      <%= cart.count %> <!-- 個数 -->
      <%= cart.subtotal_price %> <!-- 小計 -->
    <% end %>
    <td>送料</td><td>800</td>
    <td>商品合計</td><td><%= @total_price + @postage %></td>
    <%= @total_price.to_s(:delimited) %> <!-- お買い物の合計金額 -->

    <div class="row">
    <div>支払方法</div>
    <%= @order.payment_way %>
    <div>お届け先</div>
    <%= @order.postcode %>
    <%= @order.address %>
    <%#= @order.customer.first_name %>
    <%#= @order.customer.last_name %>





  </div>
</div>