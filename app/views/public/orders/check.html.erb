<h1>Public::Orders#check</h1>
<!--containerと注文情報確認テーブルはpublic/cart_itemsブランチで記述-->
<div class="container">
  <div class="row">
    <p>注文情報確認画面</p>
  </div>

  <div class="row">
    <table class="table col-md-6">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <!--下記でレコード表示-->

    </table>
    <table class="table col-md-6">
      <td>送料</td><td></td>
      <td>商品合計</td><td></td>
      <td>請求金額</td><td></td>
    </table>
  </div>


    <!--支払方法とお届け先、[注文を確定する]ボタンはpublic/oedersブランチで記述-->



  <p>支払方法  <%= @order.payment_method_i18n %></p>


  <p>お届け先</p>
  <%= @order.postcode %> <%= @order.address %>
  <%= @order.name %>

  <div class="d-flex justify-content-center">
    <div class="row">
      <%= link_to "注文を確定する", orders_done_path, class:"btn btn-success" %>
    </div>
  </div>



  </div>
</div>