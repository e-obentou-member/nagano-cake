<div class='container px-5 px-0'>
  <div class="row">
    <div class='col-3'>
      <p>ジャンル検索</p>
      <% @genres.each do |genre| %>
        <div><%= genre.name %></div>
      <% end %>
    </div>

    <div class='col-7'>
      <table>
        <tr>
          <td>商品一覧</td>
          <!--ジャンル検索の場合は[ケーキ一覧]のように表記を変える(a)-->
          <td>(全<%= @menus.count %>件)</td>
        <tr>
        <% @menus.each do |menu| %>
          <tr>
            <td>
              <%= link_to menu_path(menu.id) do %>
                <%= image_tag menu.get_image(300, 200) %>
              <% end %>
              <div><%= menu.name %></div>
              <div>￥<%= menu.tax_in_price %></div>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

