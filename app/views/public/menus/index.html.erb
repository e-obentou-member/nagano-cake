<div class='container px-5 px-0'>
  <div class="row">

    <div class="card col-2 mt-5 mr-5">
      <div class="card-body", style="height: 40px;">
        <p class="card-title">ジャンル検索</p>
        <% @genres.each do |genre| %>
          <div class="card-text"><%= genre.name %></div>
        <% end %>
      </div>
    </div>

    <div class='col-9 mt-5'>
        <h5>商品一覧(全<%= @menus.count %>件)</h5>
        <!--ジャンル検索の場合は[ケーキ一覧]のように表記を変える(a)-->

        <div class="row row-cols-2 row-cols-md-4">
          <% @menus.each do |menu| %>
            <div class="col mb-2 mt-3">
              <%= link_to menu_path(menu.id) do %>
                <%= image_tag menu.get_image(160, 120) %>
              <% end %>
              <p><%= menu.name %></p>
              <p>￥<%= menu.tax_in_price %></p>
            </div>
          <% end %>
        </div>

    </div>
  </div>
</div>

<!--ページネーション(a)-->
<div class="d-flex justify-content-center">
 <%= paginate @menus %>
</div>