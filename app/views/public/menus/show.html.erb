<h1>Public::Menus#show</h1>

<div class='container px-5 px-0'>
  <div class="row">
    <div class='col-3'>
      <p>ジャンル検索</p>
      <% @genres.each do |genre| %>
        <div><%= genre.name %></div>
      <% end %>
    </div>

    <div class='col-4'>
      <%= image_tag @menu.get_image(600, 400) %>
    </div>

    <div class='col-5'>
      <h5><%= @menu.name %></h5>
      <%= @menu.info %>
      <div>￥<%= @menu.tax_in_price %>(税込)</div>

     <!--以下の[カートに入れる]ボタンはpublic/cart_itemsブランチ！！-->
     <!--商品の販売状況で表示を変える(a)-->
      <% if @menu.is_sale? %>
        <%= form_with(model: @cart_item, url: cart_item_path, local: true) do |f| %>
        <!--ユーザーには見せたくないが取得が必要な情報にhidden_fieldを使う(a)-->
          <%= f.select :count, options_for_select(["個数選択", 1, 2, 3, 4, 5, 6, 7, 8 ,9]), class: "form-control" %>
          <%= f.hidden_field :menu_id, :value => @menu.id %>
          <%= f.submit "カートに入れる", class:"btn btn-success" %>
        <% end %>
      <% else %>
        <div class="btn btn-info">売り切れ中です</div>
      <% end %>

    </div>
  </div>
</div>
