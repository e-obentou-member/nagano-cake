<% @customers.each do |customer| %>
  <h2>
    <%= customer.first_name %><%= customer.last_name %>さんの会員情報編集
  </h2>

  <%= form_with model: @customer,url:customers_mypage_path do |f| %>
    <table>
        <tr>
          <td>会員ID</td>
          <td><%= customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :first_name %>
            <%= f.text_field :last_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.text_field :first_name_kana %>
            <%= f.text_field :last_name_kana %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_delete == false %>
              <%= f.check_box :is_delete, checked: true, checked_value: false %>
               有効
              <%= f.check_box :is_delete, checked_value: true %>
               退会
            <% else %>
              <%= f.check_box :is_delete, checked_value: false %>
               有効
              <%= f.check_box :is_delete, checked: true, checked_value: false %>
               退会
            <% end %>
          </td>
        </tr>
    </table>
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  <% end %>
<% end %>
