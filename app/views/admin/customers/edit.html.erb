<div class="container">
  <div class="row">
    <div class="col-8">
      <h2 class="py-3">
        <%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集
      </h2>
    </div>
  </div>

  <%= form_with model: @customer,url:admin_customer_path do |f| %>
    <div class="row">
      <div class="col-8 offset-1">
        <table>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr class="field">
              <td>氏名</td>
              <td><%= f.text_field :first_name, class: "form-control" %></td>
              <td><%= f.text_field :last_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :first_name_kana, class: "form-control" %></td>
              <td><%= f.text_field :last_name_kana, class: "form-control" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postcode, class: "form-control" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number, class: "form-control" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <% if @customer.is_delete == false %>
                  <%= f.radio_button :is_delete, :false, checked: true %>
                   有効
                  <%= f.radio_button :is_delete, :true %>
                   退会
                <% else %>
                  <%= f.radio_button :is_delete, :false %>
                   有効
                  <%= f.radio_button :is_delete, :true, checked: true %>
                   退会
                <% end %>
              </td>
            </tr>
        </table>
      </div>
    </div>
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
  <% end %>
</div>