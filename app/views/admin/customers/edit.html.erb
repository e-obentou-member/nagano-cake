<div class="container">
  <div class="row">
    <div class="col-8">
      <h2 class="py-5">
        <%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集
      </h2>
    </div>
  </div>
  
  <% if @customer.errors.any? %>
    <h3><%= @customer.errors.count %>件のエラーが発生しました</h3>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @customer,url:admin_customer_path do |f| %>
    <div class="row">
      <div class="col-8 offset-1">
        <table>
            <tr>
              <td class="pr-5 py-3">会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr class="field">
              <td class="pr-5 py-3">氏名</td>
              <td class="pr-3"><%= f.text_field :first_name, class: "form-control" %></td>
              <td class="pl-3"><%= f.text_field :last_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="pr-5 py-3">フリガナ</td>
              <td class="pr-3"><%= f.text_field :first_name_kana, class: "form-control" %></td>
              <td class="pl-3"><%= f.text_field :last_name_kana, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="pr-5 py-3">郵便番号</td>
              <td class="pr-3"><%= f.text_field :postcode, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="pr-5 py-3">住所</td>
              <td class="pr-3"><%= f.text_field :address, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="pr-5 py-3">電話番号</td>
              <td class="pr-3"><%= f.text_field :telephone_number, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="pr-5 py-3">メールアドレス</td>
              <td class="pr-3"><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="pr-5 py-3">会員ステータス</td>
              <td>
                <% if @customer.is_delete == false %>
                  <%= f.radio_button :is_delete, :false, checked: true %>
                   有効
                  <%= f.radio_button :is_delete, :true, class: 'ml-3' %>
                   退会
                <% else %>
                  <%= f.radio_button :is_delete, :false %>
                   有効
                  <%= f.radio_button :is_delete, :true, checked: true, class: 'ml-3' %>
                   退会
                <% end %>
              </td>
            </tr>
        </table>
      </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
    <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>