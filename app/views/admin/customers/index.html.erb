<div class="container px-10 px-sm-0">



  <div class="">
    <div class="col-3"></div>
    <h2 class="pt-3 mb-3">会員一覧</h2>
    <div class="col-9">
      <div class="mx-auto">
        <table class="table table-hover table-inverse">
          <thead>
            <tr class="bg-info text-body-emphasis">
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <%= link_to admin_customer_path(customer.id) do %>
                    <%= customer.first_name %><%= customer.last_name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <td>
                  <% if customer.is_delete == false %>
                   有効
                  <% else %>
                   退会
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!--ページネーション-->
<%= paginate @customers %>