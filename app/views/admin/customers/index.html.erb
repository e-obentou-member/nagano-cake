<div class="container px-10 px-sm-0">
  <div class="row">
    <div class="col-3 offset-1">
      <h2 class="pt-3 mb-3">
        <span>会員一覧</span>
      </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table table-hover table-inverse mx-auto">
        <thead>
          <tr class="bg-info text-body-emphasis">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.first_name %><%= customer.last_name %>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_delete == false %>
                 有効
                <% else %>
                 退会
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <!--ページネーション-->
    <%= paginate @customers, class: 'mx' %>
  </div>
  
</div>
