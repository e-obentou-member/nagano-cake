<div class="container">
  <h2>
    <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
  </h2>
  
  
  <%= flash[:notice] %>
  
  <table>
      <tr>
        <td>会員ID</td>
        <td><%=@customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td>
          <%= @customer.first_name %>
          <%= @customer.last_name %>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= @customer.first_name_kana %>
          <%= @customer.last_name_kana %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <td>
          <% if @customer.is_delete == false %>
           有効
          <% else %>
           退会
          <% end %>
        </td>
      </tr>
  </table>
  
  
  <!--編集するボタン-->
  <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-success' %>
  
  <!--注文履歴一覧を見るボタン-->
  <%= link_to "注文一覧を見る", admin_path(@customers), class: 'btn btn-primary' %>
  
  <!--ページネーション-->

</div>