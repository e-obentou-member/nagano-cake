<div class="container">
  <div class="row">
    <div class="col-8">
      <h2 class="py-3">
        <%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細
      </h2>
    </div>
  </div>

  <div class="row">
    <%= flash[:notice] %>
    <div class="col-8 offset-1">
      <table class="table table-hover table-inverse mx-auto">
        <tr>
          <td>会員ID</td>
          <td><%=@customer.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <%= @customer.first_name %>
            <%= @customer.last_name %>
          </td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td>
            <%= @customer.first_name_kana %>
            <%= @customer.last_name_kana %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.is_delete == false %>
              <div  class="text-success">
                有効  
              </div>
            <% else %>
              <div class="text-danger">
                退会
              </div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <!--編集するボタン-->
    <div class="col-5">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-success' %>
    </div>
    <!--注文履歴一覧を見るボタン-->
    <%= link_to "注文一覧を見る", admin_path(@customers), class: 'btn btn-primary' %>

    <!--ページネーション-->

  </div>
</div>