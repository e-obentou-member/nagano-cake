<div class="container px-5 px-sm-0">
 <div class="row">
   <div class="col-md-4 offset-md-1">
    <h4>ジャンル編集</h4>
     <%= form_with model: @genre, local: true  do |f| %>
      <div>
        <%=f.label :ジャンル名 %>
      </div>
      <table>
        <tr>
         <%=f.text_field :name, class: 'form-control', placeholder: "ジャンル名" %>
        </tr>
        <tr>
         <%=f.submit '変更を保存', class: 'btn btn-success'%>
        </tr>
      </table>
     <% end %>

    </div>
  </div>
</div>