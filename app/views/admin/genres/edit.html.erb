<div class="container px-5 px-sm-0">
 <% if @genre.errors.any? %>
   <%= @genre.errors.count %>件のエラーが発生しました
   <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
  <% end %>
 <div class="row">
   <div class="col-md-5 pt-md-4">
    <h4 class="pt-md-1">ジャンル編集</h4>
     <%= form_with model: @genre, url: admin_genre_path, method: :patch, local: true  do |f| %>
      <div>
        <%=f.label :ジャンル名 %>
      </div>
      <table>
        <tr>
         <td><%=f.text_field :name, class: 'form-control', placeholder: "ジャンル名" %></td>
         <td class="pl-md-3">
          <%=f.submit '変更を保存', class: 'btn btn-success'%>
         </td>
        </tr>
      </table>
     <% end %>
    </div>
  </div>
</div>