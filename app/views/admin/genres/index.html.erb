<h2>ジャンル一覧・追加</h2>
 <%= form_with model: @genre, url:genres_path, method: :post, local: true  do |f| %>
  <div class="form-group">
    <%=f.label :ジャンル名 %>
    <%=f.text_field :name, class: 'form-control', placeholder:"ジャンル名" %>
    <%=f.submit '新規登録', class: 'btn btn-success'%>
  </div>


<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
     <tr>
       <td><%= genre.name %></td>
       <td>
         <%= link_to "編集する", genres_path(genre.id), method: :post, class: 'btn btn-success' %>
       </td>
     </tr>
    <% end %>
  </tbody>
</table>