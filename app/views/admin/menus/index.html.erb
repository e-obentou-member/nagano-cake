<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-3'>
   <h4>商品一覧</h4>
   <table class='table table-hover table-inverse'>
    <thead>
     <tr>
      <th>商品Id</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="6"></th>
     </tr>
    </thead>
    <tbody>
      <% @menus.each do |menu| %>
        <tr>
         <td><%= menu.id %></td>
         <td><%= link_to menu.name, admin_menu_path(menu.id) %></td>
         <td><%= menu.non_tax_price %></td>
         <td><%= menu.genre.name %></td>
         <td><%= menu.is_sale %></td>
         </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>