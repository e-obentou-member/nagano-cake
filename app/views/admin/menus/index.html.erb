<div class='container px-5 px-sm-0'>
 <div style="color:limegreen;">
    <%= flash[:notice] %>
  </div>
 <h4>商品一覧</h4>
 <div class='row'>
  <div class='col-md-12'>
   <div class="d-flex justify-content-end">
    <%= link_to new_admin_menu_path do %>
     <i class="fas fa-plus-circle"></i>
    <% end %>
   </div>
   <table class="table">
    <thead>
     <tr>
      <th>商品Id</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="6"></th>
     </tr>
    </thead>
    <tbody>
      <% @menus.each do |menu| %>
        <tr>
         <td><%= menu.id %></td>
         <td><%= link_to menu.name, admin_menu_path(menu.id) %></td>
         <td><%= menu.non_tax_price %></td>
         <td><%= menu.genre.name %></td>
         <% if menu.is_sale == true %>
          <td style="color:limegreen;">販売中</td>
          <% else %>
          <td>販売停止中</td>
         <% end %>
         </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
<div class="d-flex justify-content-center">
 <%= paginate @menus %>
</div>