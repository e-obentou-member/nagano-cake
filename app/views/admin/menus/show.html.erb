<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-3'>
   <h4>商品詳細</h4>
   <%= image_tag 'no_image.jpg' %>
   <table class='table table-hover table-inverse'>
    <tbody>
     <tr>
      <td>商品名</td>
      <td><%= @menu.name %></td>
      <td>商品説明</td>
      <td><%= @menu.info %></td>
      <td>税込価格(税抜価格)</td>
      <td><%= @menu.tax_in_price %></td>
      <td><%= @menu.non_tax_price.to_s(:delimited) %> 円</td>
      <td>ジャンル</td>
      <td><%= @menu.genre.name %></td>
      <td>販売ステータス</td>
      <td><%= @menu.is_sale %></td>
      <td><%= link_to "編集する" edit_admin_menu_path, class: "btn btn-success" %></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>

