<div class='container px-5 px-sm-0'>
 <div style="color:limegreen;">
    <%= flash[:notice] %>
  </div>
 <h4 class="pt-md-3">商品詳細</h4>
 <div class='row'>

    <div class="col-md-5 d-flex justify-content-center">
     <%= image_tag @menu.get_image(60, 60) %>
    </div>
    <div class='col-md-7 pt-md-5'>
     <table>
      <tr>
       <td>商品名</td>
       <td class="p-md-3"><%= @menu.name %></td>
      </tr>
      <tr>
       <td valign="top">商品説明</td>
       <td class="p-md-3"><%= @menu.info %></td>
      </tr>
      <tr>
       <td>
        税込価格<br>
        (税抜価格)
        </td>
       <td class="p-md-3">
        <%= @menu.tax_in_price %>
       (<%= @menu.non_tax_price.to_s(:delimited) %>) 円
       </td>
      </tr>
      <tr>
       <td>ジャンル</td>
       <td class="p-md-3"><%= @menu.genre.name %></td>
      </tr>
      <tr>
       <td style="width:120px;">販売ステータス</td>
       <td class="p-md-3">
        <% if @menu.is_sale == true %>
         <div style="color:limegreen;">販売中</div>
        <% else %>
         <div>販売停止中</div>
        <% end %>
       </td>
      </tr>

     </table>
     <div>
     <%= link_to "編集する", edit_admin_menu_path, class: "btn btn-success" %>
     </div>
    </div>
   </div>
 </div>
