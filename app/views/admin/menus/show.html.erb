<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div>
   <h4>商品詳細</h4>
  </div>
    <div class="col-md-4-p-5">
     <%= image_tag 'no_image.jpg' %>
    </div>
    <div class='col-md-8-'>
     <table>
      <tr>
       <td>商品名</td>
       <td><%= @menu.name %></td>
      </tr>
      <tr>
       <td>商品説明</td>
       <td><%= @menu.info %></td>
      </tr>
      <tr>
       <td>
        税込価格<br>
        (税抜価格)
        </td>
       <td>
        <%= @menu.tax_in_price %>
       (<%= @menu.non_tax_price.to_s(:delimited) %>) 円
       </td>
      </tr>
      <tr>
       <td>ジャンル</td>
       <td><%= @menu.genre.name %></td>
      </tr>
      <tr>
       <td>販売ステータス</td>
       <td>
        <% if @menu.is_sale == true %>
         <div style="color:limegreen;">販売中</div>
        <% else %>
           <div>販売停止中</div>
        <% end %>
       </td>
      </tr>
      <tr>
       <td><%= link_to "編集する", edit_admin_menu_path, class: "btn btn-success" %></td>
      </tr>
     </table>
    </div>
   </div>
 </div>
