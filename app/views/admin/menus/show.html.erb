<div class='container px-5 px-sm-0'>
 <div class='row'>
  <div class='col-md-8'>
   <h4>商品詳細</h4>
    <div class="col-md-4">
     <%= image_tag 'no_image.jpg' %>
    </div>

      <div class="form-group">商品名 <%= @menu.name %></div>

      <div class="form-group">
       商品説明
      <%= @menu.info %>
      </div>
      <div class="form-group">
      税込価格(税抜価格)
      <%= @menu.tax_in_price %>
      (<%= @menu.non_tax_price.to_s(:delimited) %>) 円
      </div>
      <div class="form-group">
      ジャンル
      <%= @menu.genre.name %>
      </div>
      <div class="form-group">
      販売ステータス
      </div>

      <% if @menu.is_sale == true %>
        <div style="color:limegreen;">販売中</div>
       <% else %>
          <div>販売停止中</div>
       <% end %>

      <div class="form-group">
      <%= link_to "編集する", edit_admin_menu_path, class: "btn btn-success" %>
      </div>

  </div>
 </div>
</div>

