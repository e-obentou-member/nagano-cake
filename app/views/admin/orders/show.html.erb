<div class="container">
  <div class="raw">
    <div class="col-8">
      <h3 class="pt-5 pb-3">注文履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-5">
      <table class="table-hover mx-auto">
          <tr>
            <td class="pr-5 pb-2">氏名</td>
            <td><%= @order.customer.first_name %><%= @order.customer.last_name %></td>
          </tr>
          <tr>
            <td class="pr-5 py-2">注文日</td>
            <td class="pr-5 py-2"></td>
          </tr>
          <tr>
            <td class="pr-5 py-2">配送先</td>
            <td></td>
          </tr>
          <tr>
            <td class="pr-5 py-2">支払方法</td>
            <td></td>
          </tr>
          <tr>
            <!--<td>注文ステータス</td>-->
            <td></td>
          </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <table class="mt-2 table table-hover table-inverse mx-auto">
        <thead>
          <tr class="bg-info text-body-emphasis">
            <th>商品名</th>
            <th>単価（税込み）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <!--できれば注文ステータス-->
          </tr>
        </thead>
        <tbody>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td>
                <%= form_with(model: @order, url: admin_order_path, local: true, class: "form-row") do |f| %>
                  <%= f.select :make_status, Order.make_statuses_i18n.invert, {prompt: false}, class:"form-control form-control-sm col-6"  %>
                  <%= f.submit "更新" %>
                <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="col-3">
      <table class="table-hover mx-auto">
        <tr>
          <td class="pr-5 pb-2">商品合計</td>
          <td>

          </td>
        </tr>
        <tr>
          <td class="pr-5 py-2">送料</td>
          <td class="pr-5 py-2"></td>
        </tr>
        <tr>
          <td class="pr-5 py-2">請求金額合計</td>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
</div>
