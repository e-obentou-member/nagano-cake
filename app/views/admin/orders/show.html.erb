<h3>注文履歴詳細</h3>

<table>
    <tr>
      <td>氏名</td>
      <td>
        <%= @customer.first_name %>
        <%= @customer.last_name %>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postcode %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <% if @customer.is_delete == false %>
         有効
        <% else %>
         退会
        <% end %>
      </td>
    </tr>
</table>
